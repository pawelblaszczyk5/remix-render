{
  "private": true,
  "name": "remix-render-template",
  "description": "",
  "license": "",
  "scripts": {
    "build": "npm run build:css && npm run build:remix",
    "dev": "concurrently \"npm:dev:*\"",
    "lint": "eslint --fix --ext .ts,.tsx,.js,.jsx ./app ./server/index.js",
    "format": "prettier --write \"./app/**/*.{js,jsx,ts,tsx,html,css,json}\"",
    "test": "jest --passWithNoTests",
    "serve": "env-cmd node server/index.js",
    "lint:ci": "eslint --ext .ts,.tsx,.js,.jsx ./app ./server/index.js --max-warnings 0",
    "dev:remix": "remix watch",
    "dev:express": "env-cmd -f .env.local node server/index.js",
    "dev:css": "postcss app/styles/index.css -o app/index.css --w",
    "dev:storybook": "start-storybook -p 3001",
    "build:css": "postcss app/styles/index.css -o app/index.css --env production",
    "build:remix": "remix build",
    "build-storybook": "build-storybook",
    "postinstall": "remix setup node"
  },
  "dependencies": {
    "@remix-run/express": "^1.1.3",
